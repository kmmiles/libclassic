{
  "name": "libclassic",
  "version": "0.2.8",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "kmmiles",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "prettier": {
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "scripts": {
    "dev": "webpack-dev-server --open --config webpack.dev.js",
    "moonkin": "ts-node -sT bin/run-encounter.ts ./src/obj/moonkin-settings.json",
    "lint": "yarn lint:tsc && yarn lint:eslint",
    "lint:fix": "eslint --fix --quiet src bin",
    "build": "webpack --config webpack.prod.js && cp index.html ./dist/",
    "build:gh": "yarn clean && yarn lint && yarn test && yarn build && yarn build:docs && cp -R contrib ./dist",
    "build:npmjs": "yarn clean && yarn build && mkdirp ./dist/contrib && cp ./contrib/favicon.ico ./dist/contrib && cp -R ./contrib/icons ./dist/contrib",
    "build:docs": "typedoc --out dist/docs src",
    "build:items": "ts-node -sT bin/build-items.ts > src/db/item.json",
    "build:suffix": "ts-node -sT bin/build-suffix.ts > src/db/itemSuffix.json",
    "build:gear": "ts-node -sT bin/build-gear.ts",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "test": "echo TODO",
    "test:conversion": "ts-node -sT bin/test-conversion.ts",
    "clean": "rm -rf ./dist && rm -rf ./logs"
  },
  "dependencies": {
    "js-base64": "^2.6.1",
    "json-query": "^2.2.2",
    "lodash.clonedeep": "^4.5.0",
    "mathjs": "^7.0.1",
    "pako": "^1.0.11",
    "statsjs": "^1.0.7"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.17",
    "@types/color-name": "^1.1.1",
    "@types/js-base64": "^2.3.1",
    "@types/json-query": "^2.2.0",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/mathjs": "^6.0.5",
    "@types/node": "^14.0.13",
    "@types/pako": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "axios": "^0.19.2",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.8.20",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^7.0.2",
    "csvtojson": "^2.0.10",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "prettier": "^2.0.5",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "sideEffects": false
}
